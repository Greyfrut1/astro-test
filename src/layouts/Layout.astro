---
import Test from '../components/Test.jsx'
import ActualNewsBlock from '/var/www/astro-test/vnu-react/src/blocks/ActualNewsBlock/ActualNewsBlock.jsx'
interface Props {
	title: string;
}

const url = 'https://back.vnu.ms1-wishdesk.com/uk/jsonapi/views/actual_news/block_1?include=field_image&jsonapi_include=1';

const fetchData = async () => {
  try {
    const response = await fetch(url);
    const data = await response.json();
    return data;
  } catch (error) {
    console.error('Error fetching data:', error);
    return null;
  }
};

const data = await fetchData();
console.log(data)
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<ActualNewsBlock client:load data={data}/>
	    <Test />
